{
  "name": "aixilcoils-management-suite-desktop",
  "version": "1.0.0",
  "description": "AIXILCOILS Management Suite - Desktop Application",
  "main": "main.js",
  "author": "AIXILCOILS",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:client && electron-builder",
    "build:client": "cd ../client && npm run build",
    "build:win": "electron-builder --win --x64 --ia32 --config.win.signAndEditExecutable=false",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux --x64 --arm64",
    "pack": "electron-builder --dir --config.win.signAndEditExecutable=false"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.aixilcoils.ams",
    "productName": "AIXILCOILS Management Suite",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "web/**/*"
    ],
    "asarUnpack": [
      "web/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
